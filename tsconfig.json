{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "target": "es6",
        "module": "es6",
        "moduleResolution": "node",
        "declaration": true,
        "declarationDir": "dist",
        "noImplicitAny": false,
        "sourceMap": true,
        "types": ["@emotion/core", "@types/jest"],
        "jsx": "react",
        "outDir": "compiled",
        "noLib": false,
        "strict": true,
        "suppressImplicitAnyIndexErrors": true,
        "plugins": [
            {"name": "typescript-tslint-plugin"}
        ]
    },
    "include": [
        "./src",
        "custom.d.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}
